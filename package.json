{
    "name": "forum-api",
    "version": "1.0.0",
    "description": "Clean Architecture Elements in NodeJS",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "test": "npm run sql:truncate && npm run test:unit && npm run test:integration && npm run test:postman",
        "test:unit": "env-cmd --no-override jest --coverage \"entities|use-cases\"",
        "test:integration": "env-cmd --no-override jest --coverage \"repository\"",
        "test:functional": "env-cmd --no-override jest src/index.test.js",
        "test:postman": "newman run 'Forum API V1 Test/Forum API V1 Test.postman_collection.json' -e 'Forum API V1 Test/Forum API V1 Test.postman_environment.json' --bail",
        "prettier": "prettier --write .",
        "migrate:make": "knex --knexfile src/infrastructures/db/knexfile.js migrate:make",
        "migrate:up": "env-cmd knex --knexfile src/infrastructures/db/knexfile.js migrate:up",
        "migrate:rollback": "env-cmd knex --knexfile src/infrastructures/db/knexfile.js migrate:rollback",
        "migrate:latest": "env-cmd knex --knexfile src/infrastructures/db/knexfile.js migrate:latest",
        "create-key": "node -p \"require('crypto').randomBytes(64).toString('hex');\"",
        "repl": "node src/repl.js",
        "sql:truncate": "env-cmd --use-shell 'psql -U $PG_USER -d $PG_DATABASE -f sql/truncate-tables.sql'"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@hapi/hapi": "^20.2.1",
        "@hapi/inert": "^6.0.4",
        "@hapi/jwt": "^2.1.0",
        "@hapi/vision": "^6.1.0",
        "app-module-path": "^2.2.0",
        "awilix": "^6.0.0",
        "crypto-js": "^4.1.1",
        "dotenv": "^10.0.0",
        "env-cmd": "^10.1.0",
        "hapi-swagger": "^14.2.4",
        "immer": "^9.0.7",
        "jest": "^27.3.1",
        "joi": "^17.4.2",
        "knex": "^0.95.14",
        "nanoid": "^3.1.30",
        "newman": "^5.3.0",
        "pg": "^8.7.1",
        "prettier": "^2.4.1",
        "winston": "^3.3.3"
    }
}
